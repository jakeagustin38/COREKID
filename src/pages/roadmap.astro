---
import Layout from '../layouts/Layout.astro';
---

<Layout title="UI/UX Design Roadmap">
	<main>
		<h1>UI/UX Design <span class="text-gradient">Roadmap</span></h1>

		<div class="roadmap">
			<div class="phase">
				<h2>1. Foundation</h2>
				<ul>
					<li>Design Principles</li>
					<li>Color Theory</li>
					<li>Typography</li>
					<li>Layout & Composition</li>
					<li>Design Tools (Figma, Sketch)</li>
				</ul>
			</div>

			<div class="phase">
				<h2>2. User Experience Basics</h2>
				<ul>
					<li>User Research Methods</li>
					<li>Information Architecture</li>
					<li>Wireframing</li>
					<li>Prototyping</li>
					<li>Usability Testing</li>
				</ul>
			</div>

			<div class="phase">
				<h2>3. Advanced Skills</h2>
				<ul>
					<li>Interaction Design</li>
					<li>Design Systems</li>
					<li>Responsive Design</li>
					<li>Accessibility</li>
					<li>Animation & Micro-interactions</li>
				</ul>
			</div>

			<div class="phase">
				<h2>4. Professional Growth</h2>
				<ul>
					<li>Portfolio Building</li>
					<li>Case Studies</li>
					<li>Design Leadership</li>
					<li>Team Collaboration</li>
					<li>Industry Networking</li>
				</ul>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
	}
	h1 {
		font-size: 3rem;
		text-align: center;
		margin-bottom: 3rem;
	}
	.roadmap {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	.phase {
		background: rgba(var(--accent-dark), 0.3);
		padding: 1.5rem;
		border-radius: 1rem;
		border: 1px solid rgba(var(--accent-light), 0.2);
	}
	.phase h2 {
		color: rgb(var(--accent-light));
		margin-bottom: 1rem;
	}
	.phase ul {
		list-style: none;
		padding: 0;
	}
	.phase li {
		margin: 0.5rem 0;
		padding-left: 1.5rem;
		position: relative;
	}
	.phase li:before {
		content: "â†’";
		position: absolute;
		left: 0;
		color: rgb(var(--accent-light));
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
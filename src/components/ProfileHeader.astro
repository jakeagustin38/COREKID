---
const { name, title } = Astro.props;
---
<div class="profile-header">
    <img src="https://www.facebook.com/photo/?fbid=3211271862337192&set=a.100786153385794" alt="Profile Picture" class="avatar" />
    <div class="profile-info">
        <h1>{name}</h1>
        <p>{title}</p>
    </div>
</div>

<style>
    .profile-header {
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
        background: rgba(var(--accent-dark), 0.3);
        border-radius: 1rem;
    }
    .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid rgb(var(--accent-light));
    }
    .profile-info h1 {
        font-size: 2.5rem;
        margin: 0;
    }
    .profile-info p {
        color: rgb(var(--accent-light));
        margin: 0.5rem 0;
    }
</style>
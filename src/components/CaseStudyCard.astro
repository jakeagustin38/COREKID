---
const { title, description, image, tags } = Astro.props;
---
<div class="case-study-card">
    <img src={image} alt={title} />
    <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
        <div class="tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
    </div>
</div>

<style>
    .case-study-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        overflow: hidden;
    }
    .case-study-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .content {
        padding: 1.5rem;
    }
    .tags {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    .tag {
        background: rgba(var(--accent-light), 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.875rem;
    }
</style>